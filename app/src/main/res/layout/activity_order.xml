<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp">

    <!-- Заголовок -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ваш заказ:"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tsena"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/orderlist_price"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ждите:"
                android:layout_marginLeft="5dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Жди"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/orderlist_totaltime"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

    </LinearLayout>

        <!-- Список заказанных элементов -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/orderItemList"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="10dp"/>

    <!-- Кнопки -->

    <TextView
            android:id="@+id/link_to_menu"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="Хочешь ещё что-нибудь заказать? Нажимай сюда!"
            android:layout_marginBottom="13dp"/>

    <!-- Кнопка оплаты -->
    <Button
            android:id="@+id/linkToTYPButton"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"
            android:backgroundTint="#ED0404"
            android:text="Оценить!"/>

    <!-- Кнопка отмены заказа -->

<!--    <Button-->
<!--            android:id="@+id/cancelButton"-->
<!--            android:layout_width="150dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_weight="0.5"-->
<!--            android:backgroundTint="#878888"-->
<!--            android:textSize="10sp"-->
<!--            android:text="Отменить заказ("/>-->





</LinearLayout>